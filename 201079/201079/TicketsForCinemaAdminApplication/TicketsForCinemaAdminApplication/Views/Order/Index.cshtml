@{
}

@model List<TicketsForCinemaAdminApplication.Models.Order>


<div class="container">
    <div class="row">
        <a class="btn btn-success" asp-controller="Order" asp-action="ExportAllOrders">Orders</a>
    </div>
    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Details</th>
                    <th scope="col">Number of tickets</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No tickets selected</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.User.FirstName</td>
                            <td>@item.ProductInOrders.Count()</td>
                            <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">View</a></td>
                            <td><a asp-action="CreateInvoice" asp-route-id="@item.Id" class="btn btn-secondary">Create Invoice</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>