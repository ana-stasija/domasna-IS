@model TicketsForCinema.Domain.DTO.UserLoginDTO
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto" style="width:600px;">
    <br />
    <h1>User login</h1>
    @Html.ValidationSummary()
    <form asp-action="Login" asp-controller="Account" method="post">

        <div class="logindiv my-5">

            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label"></label>
                <br>
                <div class="">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Mail", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Password" class="control-label"></label>
                <br>
                <div class="">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Pass", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group mt-4">
                <div class="btn-submit">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <br /><br />
                    <a asp-action="Register" asp-controller="account">New? Register account here</a>

                </div>
            </div>
        </div>
    </form>
</div>  