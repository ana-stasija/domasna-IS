@model TicketsForCinema.Domain.DTO.AddToShoppingCartDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Add ticket to shopping cart</h3>

<div class="mx-auto mt-4" style="width:600px;">
    <div class="">
        <form method="post" asp-action="AddProductToCard">
            <input type="hidden" asp-for="SelectedProductId"/>
            <div class="form-group">
                <label asp-for="SelectedProduct.ProductName"></label>
                <input disabled asp-for="SelectedProduct.ProductName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input type="number" asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>