@using Microsoft.Extensions.Options
@model TicketsForCinema.Domain.DTO.ShoppingCartDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">


    <div class="row m-4">
        <a asp-controller="ShoppingCart" asp-action="Order" class="btn btn-info">Order Now</a>
    </div>

    <div class="row m-4">
        <table class="table">
            <thead class="">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">ProductPrice</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products.Count == 0)
                {
                    <tr>
                        <td colspan="5">No available tickets</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Products.Count; i++)
                    {
                        var item = Model.Products[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.CurrentProduct.ProductName</td>
                            <td>@item.Quantity</td>
                            <td>@item.CurrentProduct.ProductPrice MKD</td>
                            <td><a asp-controller="ShoppingCart" asp-action="DeleteFromShoppingCart" asp-route-id="@item.ProductId" class="btn btn-danger">Delete</a></td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot class="">
                <tr>
                    <th scope="col">TotalPrice:</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col">@Model.TotalPrice MKD</th>
                </tr>
            </tfoot>
        </table>
    </div>

</div>